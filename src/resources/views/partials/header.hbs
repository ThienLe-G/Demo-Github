                <li class="nav-item p-2">
                    <a href="/user" class='nav-link' onclick=navUserpage({{isLogin}})>USER</a>
                </li>
                <li class="nav-item p-2">
                    <a href="/aboutUs" class='nav-link'>ABOUT US</a>
                </li>
            </ul>
        </div>
        <div class="col-lg-2 col-12 p-0 m-1 mx-0 gap-3 d-flex justify-content-lg-center justify-content-center">
            <button class=" button_header signInBtn my-3 border-0 py-2 px-3 mt-3" data-bs-toggle="modal"
                id="loginBtn" onclick=checkLogin()>Log in</button>
        </div>
        <div class="modal fade" id="login_form" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <!-- Login Form -->
                    <form action="">
                        <div class="modal-header">
                            <h5 class="modal-title text-dark">Login</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-footer justify-content-center">
                            <div class="col-12 pb-3 d-flex justify-content-center">
                                <a href="/login/federated/google"
                                    class="btn btn-lg btn-block d-flex align-items-center "
                                    style="background-color:white; border: none" href="#!" role="button">
                                    <img class="img-fluid me-4" width="20" height="20"
                                        src="https://static-00.iconduck.com/assets.00/google-icon-2048x2048-czn3g8x8.png">
                                    <span style="color: black;">Log in with Google</span>
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
<script>
    if ({{ isLogin }}) {
        document.querySelector("#loginBtn").innerHTML = "Log out";
    }
    function navUserpage(isLogin) {
        event.preventDefault();
        if( isLogin )  {
            window.location.href = "/user"
        } else $('#login_form').modal('show');
    }
    function checkLogin() {
        if (document.querySelector("#loginBtn").innerHTML == "Log out") {
            window.location.href = '/logout';
        } else $('#login_form').modal('show');
    }

    function checkLoginFood(isLogin){
        if (isLogin == 'false') {
            alert("vui lòng đăng nhập");
            window.location.href = '/food';
        }
    }
</script>