    <div class="row gap-lg-1 mb-4">
        <div class="col-lg-3 col-12 m-1 my-3 px-1 d-flex justify-content-lg-end justify-content-center">
            <a href="/homepage"><img class="logo_hpm mw-90 mh-90 " src="http://localhost:3000/img/logo.png" alt=""></a>
        </div>
        <div class="col-lg-6 col-12 align-items-center ">
            <ul class="navbar py-3 p-0 mx-2 my-0 m-lg-0 d-flex " style="list-style-type: none;">
